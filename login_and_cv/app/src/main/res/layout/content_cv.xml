<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd"
    tools:context=".MainActivity2">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Simple CV"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title">

        <!-- wrap with LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:id="@+id/name"
            android:text="\nOliver Gablino Tagod"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:id="@+id/address"
            android:text="Valencia, Ormoc City, Leyte, PH"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:id="@+id/phone"
            android:text="09274386334"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:id="@+id/email"
            android:text="oliverberrgablinotagod@gmail.com"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/email"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:id="@+id/skills"
            android:gravity="center"
            android:text="Skills"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skills"
            android:id="@+id/skills_list"
            android:text="Python (Tkinter)\nSQL\nPandas, NumPy, and Matplotlib\nData Analytics\nFamiliar with Machine and Deep Learning"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/skills_list"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skills_list"
            android:id="@+id/education"
            android:text="Education"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/education"
            android:id="@+id/course"
            android:text="\nBachelor of Science in Information Technology"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course"
            android:id="@+id/university"
            android:text="EVSU - Ormoc Campus, Present"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/university"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/university"
            android:id="@+id/experience"
            android:gravity="center"
            android:text="Experience"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/experience"
            android:id="@+id/job"
            android:text="\nWeb Content Writer"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job"
            android:id="@+id/job_address"
            android:text="Bootyard, 2020-2020"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_address"
            android:id="@+id/job_desc"
            android:text="â€¢I'm an intern on this company. My task is to keep on SEO trends and increase product engagement."
            android:textSize="14sp" />

        </LinearLayout>
        </ScrollView>
</RelativeLayout>